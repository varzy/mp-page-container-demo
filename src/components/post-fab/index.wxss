.fab {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #000;
  color: #fff;
  border-radius: 50%;
  font-size: 64rpx;
  z-index: 500;
}

.post_fab_wrapper {
  z-index: 800000;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.post_fab_wrapper .content {
  width: 100%;
  height: 300rpx;
  border: 1px solid #eee;
}

.post_fab_wrapper .btn {
  margin-top: 24rpx;
}
